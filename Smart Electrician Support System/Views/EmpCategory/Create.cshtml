@model Smart_Electrician_Support_System.ViewModels.EmpCategoryViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ManagementDashboardLayout.cshtml";
}<h1>Create</h1>


<div class="container-fluid">
    <div class="card bg-white">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h1>Create New Employee Category</h1>
                </div>
                <div class="row">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Library</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Data</li>
                        </ol>
                    </nav>
                </div>

            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="EmpCat_ID" class="form-check-label"></label>
                            <input asp-for="EmpCat_ID" class="form-control" />
                            <span asp-validation-for="EmpCat_ID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmpCat_Type" class="form-check-label"></label>
                            <input asp-for="EmpCat_Type" class="form-control"/>
                            <span asp-validation-for="EmpCat_Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmpCat_Descr" class="form-check-label"></label>
                            <textarea asp-for="EmpCat_Descr" class="form-control"> </textarea>
                            <span asp-validation-for="EmpCat_Descr" class="text-danger"></span>
                        </div>
                        <div>
                            <input type="submit" value="Create" class="btn btn-primary" /> |
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-footer">

        </div>
    </div>
</div>