@model Smart_Electrician_Support_System.ViewModels.EmpCategoryViewModel;
@{ 
    Model.EmpCat_ID = ViewData["NewID"].ToString();
}
<div class="row">
    <div class="col">

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="EmpCat_ID" class="form-check-label"></label>
                        <input asp-for="EmpCat_ID" class="form-control" readonly/>
                        <span asp-validation-for="EmpCat_ID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="EmpCat_Type" class="form-check-label"></label>
                        <input asp-for="EmpCat_Type" class="form-control" />
                        <span asp-validation-for="EmpCat_Type" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="EmpCat_Descr" class="form-check-label"></label>
                <textarea asp-for="EmpCat_Descr" class="form-control"> </textarea>
                <span asp-validation-for="EmpCat_Descr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- Default dropright button -->
                <label asp-for="EmpCat_Status" class="form-check-label"></label>
                <select class="custom-select" asp-for="EmpCat_Status">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span asp-validation-for="EmpCat_Status" class="text-danger"></span>
            </div>

            <div>
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}