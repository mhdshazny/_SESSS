@model Smart_Electrician_Support_System.ViewModels.EmpCategoryViewModel;

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EmpCat_ID" />
                    <div class="form-group">
                        <label asp-for="EmpCat_ID" class="control-label"></label>
                        <input asp-for="EmpCat_ID" class="form-control" readonly />
                        <span asp-validation-for="EmpCat_ID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmpCat_Type" class="control-label"></label>
                        <input asp-for="EmpCat_Type" class="form-control" />
                        <span asp-validation-for="EmpCat_Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmpCat_Descr" class="control-label"></label>
                        <textarea asp-for="EmpCat_Descr" class="form-control"> </textarea>
                        <span asp-validation-for="EmpCat_Descr" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmpCat_Status" class="control-label"></label>
                        <input asp-for="EmpCat_Status" class="form-control" />
                        <span asp-validation-for="EmpCat_Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>