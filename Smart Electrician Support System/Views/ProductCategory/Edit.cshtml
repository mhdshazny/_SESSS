@model Smart_Electrician_Support_System.ViewModels.ProductCategoryViewModel;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ManagementDashboardLayout.cshtml";
}

<h1>Edit/Update</h1>

<h4>Employee Category - Edit/Update</h4>
<hr />
<div class="row">
    <div class="col-md col-lg">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="PrdCat_ID" class="control-label"></label>
                        <input asp-for="PrdCat_ID" class="form-control" readonly />
                        <span asp-validation-for="PrdCat_ID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="PrdCat_Type" class="control-label"></label>
                        <input asp-for="PrdCat_Type" class="form-control" />
                        <span asp-validation-for="PrdCat_Type" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="PrdCat_Description" class="control-label"></label>
                        <textarea asp-for="PrdCat_Description" class="form-control"> </textarea>
                        <span asp-validation-for="PrdCat_Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <!-- Default dropright button -->
                        <label asp-for="PrdCat_Status" class="form-check-label"></label>
                        <select class="form-control custom-select" asp-for="PrdCat_Status">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                        <span asp-validation-for="PrdCat_Status" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-block btn-primary" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <input type="button" value="Back to List" asp-action="Index" class="btn btn-block btn-secondary" />
                    </div>
                </div>
            </div>






        </form>
    </div>
</div>


