@model Smart_Electrician_Support_System.ViewModels.DashTargetViewModel

@{
    ViewData["Title"] = "DashConfig";
    Layout = "~/Views/Shared/_ManagementDashboardLayout.cshtml";
}


<h1>Set Dashboard Targets</h1>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="monthTarget" class="control-label"></label>
                <input asp-for="monthTarget" class="form-control" />
                <span asp-validation-for="monthTarget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="yearTarget" class="control-label"></label>
                <input asp-for="yearTarget" class="form-control" />
                <span asp-validation-for="yearTarget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="revenueAnnum" class="control-label"></label>
                <input asp-for="revenueAnnum" class="form-control" />
                <span asp-validation-for="revenueAnnum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="revenueMonth" class="control-label"></label>
                <input asp-for="revenueMonth" class="form-control" />
                <span asp-validation-for="revenueMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CEOMessage" class="control-label"></label>
                <textarea asp-for="CEOMessage" class="form-control"></textarea>
                <span asp-validation-for="CEOMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="specialWishes" class="control-label"></label>
                <input asp-for="specialWishes" class="form-control" />
                <span asp-validation-for="specialWishes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <input asp-for="status" class="form-control" readonly/>
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <br />
            <hr />  
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
