@model Smart_Electrician_Support_System.ViewModels.EmployeeViewModel
@{
    Model.EmpID = ViewData["NewID"].ToString();

}
<hr />

<div class="col">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="EmpID" class="control-label"></label>
                    <input asp-for="EmpID" class="form-control" readonly />
                    <span asp-validation-for="EmpID" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="fName" class="control-label"></label>
                    <input asp-for="fName" class="form-control" />
                    <span asp-validation-for="fName" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="lName" class="control-label"></label>
                    <input asp-for="lName" class="form-control" />
                    <span asp-validation-for="lName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="EmpCat_ID" class="control-label"></label>
                    @*<input asp-for="EmpCat_ID" class="form-control" />*@
                    @Html.DropDownListFor(m => m.EmpCat_ID, ViewData["EmpCatList"] as SelectList, "-Select Employee Category-", new { @class = "form-control" })

                    <span asp-validation-for="EmpCat_ID" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <select class="custom-select" asp-for="Gender">
                        <option value="">-Select Gender-</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="DoB" class="control-label"></label>
                    <input asp-for="DoB" class="form-control" />
                    <span asp-validation-for="DoB" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="NIC" class="control-label"></label>
                    <input asp-for="NIC" class="form-control" />
                    <span asp-validation-for="NIC" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Contact" class="control-label"></label>
                    <input asp-for="Contact" class="form-control" />
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <!-- Default dropright button -->
                    <label asp-for="Status" class="form-check-label"></label>
                    <select class="custom-select" asp-for="Status">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">

            <div class="col">
                <br />

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-block btn-primary" />
                </div>
            </div>
            <div class="col">
                <br />
                <div class="form-group">
                    <input type="reset" value="Clear" class="btn btn-block btn-secondary" />
                </div>
            </div>

        </div>


    </form>
</div>

